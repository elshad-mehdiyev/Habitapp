<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gainsboro"
    android:backgroundTint="@color/gainsboro"
    android:gravity="center"
    android:theme="@style/Theme.AppCompat.Light">
    <PreferenceCategory android:title="Personal Data">

        <ListPreference
            android:defaultValue="kg"
            android:entries="@array/weight"
            android:entryValues="@array/weight"
            android:icon="@drawable/ic_kg"
            android:key="kg_unit"
            android:title="Weight  unit"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue="70"
            android:digits="0123456789"
            android:icon="@drawable/ic_weight"
            android:inputType="numberDecimal"
            android:key="weight_walk"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Weight"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            android:defaultValue="m"
            android:entries="@array/height"
            android:entryValues="@array/height"
            android:icon="@drawable/ic_noun_ruler_2059554"
            android:key="m_unit"
            android:title="Height  unit"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue="70"
            android:digits="0123456789"
            android:icon="@drawable/ic_cm"
            android:inputType="numberDecimal"
            android:key="Height_walk"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Height"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>